#!/usr/bin/env node
'use strict'

const meow = require('meow')
const ora = require('ora')

let cli = meow({
  autoHelp: false,
  help: `
  Usage
    $ tmk <commands>

  Commands
    - create --help     # see all create commands
`
})

const spinner = ora()
let command = null

if (cli.input.length === 0) {
  if (cli.flags.help) cli.showHelp()
  if (cli.flags.version) cli.showVersion()
}

switch (cli.input[0]) {
  case 'help':
    cli.showHelp()
    break
  case 'version':
    cli.showVersion()
    break
  case 'create':
    const create = require('./tmk-create')(cli, spinner)
    command = create.run
    cli = create.cli
    break
}

if (command === null) {
  spinner
    .fail('You need to pass one command.\n  See --help')
    .stop()
  process.exit()
}

spinner
  .start(`Ok! Executing the command ${cli.input[0]}.`)

command()
  .then(function (response) {
    spinner.succeed(response)
    process.exit()
  })
  .catch(function (error) {
    spinner.fail(error.message)
    process.exit()
  })
